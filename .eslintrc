{
  "rules": {
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "indent": ["error", 4],
    "comma-dangle": ["error", {
      "functions": "ignore"
    }],
    "no-underscore-dangle": [
      "error",
      { "allowAfterThis": true }
    ],
    "class-methods-use-this": 0
  },
  "env": {
    "mocha": true,
    "node": true
  },
  "extends": ["airbnb-base"]
}
